<% if user_signed_in? %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <!-- Stats Section -->
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 mb-12">
    <!-- Points Card -->
    <div class="relative overflow-hidden rounded-2xl bg-white p-6 shadow-lg shadow-slate-200/50 hover:shadow-xl transition-shadow duration-300 group">
      <div class="absolute -right-6 -top-6 h-24 w-24 rounded-full bg-blue-50 group-hover:bg-blue-100 transition-colors"></div>
      <dt class="truncate text-sm font-medium text-slate-500 relative z-10">今月の獲得ポイント</dt>
      <dd class="mt-2 flex items-baseline relative z-10">
        <span class="text-4xl font-bold tracking-tight text-slate-900"><%= @monthly_points %></span>
        <span class="ml-2 text-sm font-semibold text-slate-400">pts</span>
      </dd>
    </div>

    <!-- Ranking Card -->
    <div class="relative overflow-hidden rounded-2xl bg-white p-6 shadow-lg shadow-slate-200/50 hover:shadow-xl transition-shadow duration-300 group">
      <div class="absolute -right-6 -top-6 h-24 w-24 rounded-full bg-amber-50 group-hover:bg-amber-100 transition-colors"></div>
      <dt class="truncate text-sm font-medium text-slate-500 relative z-10">現在の順位</dt>
      <dd class="mt-2 flex items-baseline relative z-10">
        <span class="text-4xl font-bold tracking-tight text-slate-900"><%= @ranking.index { |u| u.id == current_user.id }&.+(1) || '-' %></span>
        <span class="ml-2 text-sm font-semibold text-slate-400">位</span>
      </dd>
    </div>

    <!-- Action Card -->
    <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-indigo-600 to-blue-500 p-6 shadow-lg shadow-indigo-500/30 text-white">
        <dt class="truncate text-sm font-medium text-indigo-100">新規接客を開始</dt>
        <dd class="mt-4">
            <%= button_to interactions_path, method: :post, class: "w-full group inline-flex items-center justify-center rounded-xl bg-white/10 backdrop-blur-sm border border-white/20 px-4 py-3 text-sm font-bold text-white hover:bg-white/20 transition-all duration-300" do %>
                <span class="mr-2 h-2 w-2 rounded-full bg-red-400 animate-pulse"></span>
                録音スタート
            <% end %>
        </dd>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Ranking -->
    <div class="bg-white shadow-lg shadow-slate-200/50 rounded-2xl overflow-hidden border border-slate-100">
      <div class="px-6 py-5 border-b border-slate-50 bg-slate-50/50">
        <h3 class="text-base font-bold leading-6 text-slate-900 flex items-center gap-2">
            <span>🏆</span> 今月のトップセールス
        </h3>
      </div>
      <ul role="list" class="divide-y divide-slate-100">
        <% @ranking.each_with_index do |user, idx| %>
          <li class="flex justify-between items-center gap-x-6 px-6 py-5 hover:bg-slate-50/50 transition-colors">
            <div class="flex items-center gap-x-4">
              <div class="h-10 w-10 flex-none rounded-full <%= idx == 0 ? 'bg-amber-100 text-amber-600' : (idx == 1 ? 'bg-slate-200 text-slate-600' : (idx == 2 ? 'bg-orange-100 text-orange-600' : 'bg-slate-100 text-slate-500')) %> flex items-center justify-center font-bold text-sm">
                <%= idx + 1 %>
              </div>
              <div class="min-w-0 flex-auto">
                <p class="text-sm font-bold leading-6 text-slate-900"><%= user == current_user ? "#{user.name} (あなた)" : user.name %></p>
                <p class="truncate text-xs leading-5 text-slate-500"><%= user.email %></p>
              </div>
            </div>
            <div class="hidden sm:flex sm:flex-col sm:items-end">
              <p class="text-sm leading-6 text-slate-900 font-bold font-mono"><%= user.total_points %><span class="text-xs font-normal text-slate-400 ml-1">pts</span></p>
               <% if user.total_points >= 100 %>
                <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">Target Reached!</span>
               <% end %>
            </div>
          </li>
        <% end %>
        <% if @ranking.empty? %>
            <div class="p-6 text-center text-slate-500 text-sm">今月のデータはまだありません。</div>
        <% end %>
      </ul>
    </div>

    <!-- Recent Interactions -->
    <div class="bg-white shadow-lg shadow-slate-200/50 rounded-2xl overflow-hidden border border-slate-100">
       <div class="px-6 py-5 border-b border-slate-50 bg-slate-50/50">
           <h3 class="text-base font-bold leading-6 text-slate-900 flex items-center gap-2">
               <span>⏱</span> 最近の接客履歴
           </h3>
       </div>
        <ul role="list" class="divide-y divide-slate-100">
        <% @recent_interactions.each do |interaction| %>
          <li class="flex justify-between items-center gap-x-6 px-6 py-5 hover:bg-slate-50/50 transition-colors">
            <div class="min-w-0 flex-auto">
              <p class="text-sm font-bold leading-6 text-slate-900"><%= interaction.customer&.name || "顧客未割当" %></p>
              <p class="mt-1 truncate text-xs leading-5 text-slate-500 flex items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-13a.75.75 0 00-1.5 0v5c0 .414.336.75.75.75h4a.75.75 0 000-1.5h-3.25V5z" clip-rule="evenodd" />
                </svg>
                <%= time_ago_in_words(interaction.created_at) %>前 • <%= interaction.user.name %>
              </p>
            </div>
             <div class="hidden sm:flex sm:flex-col sm:items-end">
                <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ring-1 ring-inset <%= interaction.recording? ? 'bg-red-50 text-red-700 ring-red-600/10' : 'bg-slate-50 text-slate-600 ring-slate-500/10' %>">
                    <%= interaction.status_i18n %>
                </span>
            </div>
          </li>
        <% end %>
          <li class="p-4 text-center bg-slate-50/30">
             <%= link_to "全ての履歴を見る", interactions_path, class: "text-sm font-semibold text-indigo-600 hover:text-indigo-500 hover:underline" %>
          </li>
        </ul>
    </div>
  </div>
</div>
<% else %>
<div class="relative bg-white overflow-hidden">
  <!-- Hero Section -->
  <div class="relative isolate pt-14">
    <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
      <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
    </div>
    
    <div class="py-24 sm:py-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-6xl font-sans">
            <span class="block">建設営業の未来を</span>
            <span class="block text-indigo-600">ここから始めよう</span>
          </h1>
          <p class="mt-6 text-lg leading-8 text-slate-600">
            BuilderCRMは、工務店・建設会社のために設計された次世代の営業管理プラットフォームです。
            AIによる文字起こし、直感的な案件管理、そしてチームのモチベーションを高めるゲーミフィケーション機能で、
            営業プロセスを革新します。
          </p>
          <div class="mt-10 flex items-center justify-center gap-x-6">
            <%= link_to new_user_registration_path, class: "rounded-full bg-indigo-600 px-8 py-3.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-all transform hover:scale-105" do %>
                無料で始める
            <% end %>
            <%= link_to "ログイン", new_user_session_path, class: "text-sm font-semibold leading-6 text-slate-900 hover:text-indigo-600 transition-colors" %>
          </div>
        </div>
        <div class="mt-16 flow-root sm:mt-24">
          <div class="-m-2 rounded-xl bg-slate-900/5 p-2 ring-1 ring-inset ring-slate-900/10 lg:-m-4 lg:rounded-2xl lg:p-4">
             <!-- Placeholder for Hero Image, replacing with the generated artifact path in next step if applicable, or using a nice div -->
             <div class="rounded-md shadow-2xl ring-1 ring-slate-900/10 overflow-hidden bg-slate-200 aspect-[16/9] relative">
                <img src="/construction_crm_hero_1768487187741.png" alt="App Screenshot" class="object-cover w-full h-full" />
                <div class="absolute inset-0 bg-gradient-to-t from-slate-900/40 to-transparent"></div>
                <div class="absolute bottom-6 left-6 text-white text-left p-6 sm:p-10 pointer-events-none">
                     <p class="text-lg font-semibold shadow-black drop-shadow-md">現場でも、オフィスでも。<br>すべての情報を一つに。</p>
                </div>
             </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]" aria-hidden="true">
      <div class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
    </div>
  </div>
</div>
<% end %>
