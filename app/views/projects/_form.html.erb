<%= form_with(model: project, class: "contents") do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul class="list-disc ml-6">
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": project.errors[:name].none?, "border-red-400 focus:outline-red-600": project.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.select :status, Project.statuses.keys.map { |k| [I18n.t("activerecord.enums.project.status.#{k}"), k] }, {}, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full border-gray-400 focus:outline-blue-600" %>
  </div>

  <div class="my-5">
    <%= form.label :contract_date %>
    <%= form.date_field :contract_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": project.errors[:contract_date].none?, "border-red-400 focus:outline-red-600": project.errors[:contract_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :delivery_date %>
    <%= form.date_field :delivery_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": project.errors[:delivery_date].none?, "border-red-400 focus:outline-red-600": project.errors[:delivery_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :estimated_amount %>
    <%= form.number_field :estimated_amount, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": project.errors[:estimated_amount].none?, "border-red-400 focus:outline-red-600": project.errors[:estimated_amount].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :customer_id %>
    <%= form.collection_select :customer_id, current_user.company.customers, :id, :name, {}, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full border-gray-400 focus:outline-blue-600" %>
  </div>

  <div class="my-5">
    <%= form.label :user_id, "担当者" %>
    <%= form.collection_select :user_id, current_user.company.users, :id, :name, {}, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full border-gray-400 focus:outline-blue-600" %>
  </div>



  <div class="inline">
    <%= form.submit "保存", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
