<div id="<%= dom_id project %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">案件名:</strong>
    <%= project.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">ステータス:</strong>
    <%= t("activerecord.enums.project.status.#{project.status}") %>
  </div>
  <div>
    <strong class="block font-medium mb-1">契約日:</strong>
    <%= project.contract_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">引渡日:</strong>
    <%= project.delivery_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">見積金額:</strong>
    <%= number_to_currency(project.estimated_amount, unit: "¥", precision: 0) %>
  </div>
  <div>
    <strong class="block font-medium mb-1">顧客:</strong>
    <%= project.customer.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">担当者:</strong>
    <%= project.user.name %>
  </div>
</div>
